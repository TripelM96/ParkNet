@page
@model ParkNet.Pages.BalanceTransactions.IndexModel

@{
    ViewData["Title"] = "Index";

    var balance = Math.Round(Model.Balance, 2);
}

<h1>Wallet</h1>

<p>
    <a asp-page="Create">Deposit</a>
</p>
<p>
   Balance: @balance
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BalanceTransaction[0].User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BalanceTransaction[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BalanceTransaction[0].Ammount)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.BalanceTransaction[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BalanceTransaction) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ammount)
            </td>          
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>           
        </tr>
}
    </tbody>
</table>
