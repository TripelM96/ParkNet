            </div>
            <div class="form-group">
                <label for="Subscription.ParkingLotId">Parking Lot</label>
                <select asp-for="Subscription.ParkingLotId" asp-items="Model.ParkingLotList" class="form-control">
                    <option value="">-- Escolher parque --</option>
                </select>
            </div>          
            <div class="form-group">
                <label asp-for="Subscription.IncialDate" class="control-label"></label>
                <input asp-for="Subscription.IncialDate" class="form-control" />
                <span asp-validation-for="Subscription.IncialDate" class="text-danger"></span>
            </div>
           @*  <div class="form-group">
